<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price) %>
</p>

<% if @product.image.attached? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag @product.image, size: "400x400"  %>
  </p>
<% end %>